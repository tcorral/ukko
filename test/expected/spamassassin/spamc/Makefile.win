CC = @@CC@@

WINCFLAGS = @@WINCFLAGS@@
SSLCFLAGS = @@SSLCFLAGS@@

EXEEXT = .exe

SRCDIR = @@SRCDIR@@
MAKEFILE = Makefile

WINLIBS = @@WINLIBS@@
SSLLIBS = @@SSLLIBS@@

SPAMC_FILES = @@SPAMC_FILES@@
LIBSPAMC_FILES = @@LIBSPAMC_FILES@@


all: spamc$(EXEEXT)


$(SRCDIR)/spamc$(EXEEXT):
	cd $(SRCDIR)
	$(MAKE) spamc$(EXEEXT)


spamc$(EXEEXT): $(SPAMC_FILES) $(LIBSPAMC_FILES)
	$(CC) $(WINCFLAGS) $(SSLCFLAGS) $(CFLAGS) $(SPAMC_FILES) $(LIBSPAMC_FILES) $(WINLIBS) $(SSLLIBS) $(LIBS)

